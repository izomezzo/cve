package politse.web;

import java.util.logging.Level;
import java.util.logging.Logger;

import org.primefaces.push.EventBus;
import org.primefaces.push.RemoteEndpoint;
import org.primefaces.push.annotation.OnClose;
import org.primefaces.push.annotation.OnMessage;
import org.primefaces.push.annotation.OnOpen;
import org.primefaces.push.annotation.PathParam;
import org.primefaces.push.annotation.PushEndpoint;
import org.primefaces.push.annotation.Singleton;
import org.primefaces.push.impl.JSONEncoder;

@PushEndpoint("/order/{user}")
@Singleton
public class OrderResource {
	
private static final Logger logger = Logger.getLogger("politse.web.OrderResource");
	
    @PathParam("user")
    private String user;
    
    @OnOpen
    public void onOpen(RemoteEndpoint r, EventBus eventBus) {
        logger.log(Level.INFO, "OrderResource.onOpen endpoint: {0}", 
                new Object[]{r});
    }
 
    @OnClose
    public void onClose(RemoteEndpoint r, EventBus eventBus) {
    	logger.log(Level.INFO, "OrderResource.onClose endpoint: {0}", 
                new Object[]{r});
    }
    
    @OnMessage(encoders = {JSONEncoder.class})
    public String onMessage(String eventType) throws InterruptedException {
    	logger.log(Level.INFO, "OrderResource.onMessage type {0}",eventType);
        return eventType;
    }

}
